<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lugar_destacado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="4dp"


    android:layout_marginBottom="4dp"

    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="5dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">


        <FrameLayout

            android:id="@+id/frame_iamge"
            android:layout_width="150dp"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/image_character"
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:scaleType="centerCrop"

                android:src="@drawable/character_image" />

            <!--<ImageView-->
            <!--android:id="@+id/select_favorito"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right|top"-->
            <!--android:layout_margin="2dp"-->
            <!--android:clickable="true"-->
            <!--android:focusable="true"-->
            <!--android:padding="4dp"-->
            <!--android:src="@drawable/ic_favorite_black_24dp"-->
            <!--tools:ignore="NewApi" />-->

            <TextView

                android:id="@+id/name_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_marginTop="10dp"
                android:background="@color/colorblacktransparent"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed-light"
                android:gravity="left"

                android:paddingLeft="@dimen/padding_left"
                android:text="Tammy Guetermann"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </FrameLayout>


        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_details"
            android:padding="@dimen/padding_left">

            <ImageView
                android:id="@+id/select_favorite"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_margin="2dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/ic_star_black_24dp"
                tools:ignore="NewApi" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:textSize="12sp"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:text="STATUS"
                    android:textColor="@color/detail_tex" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/details_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alive"
                    android:textColor="@color/detail_text_value" />

                <!--<View-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:id="@+id/view1"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="#c0c0c0"/>-->

                <TextView
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="SPECIES"
                    android:textColor="@color/detail_tex" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/details_species"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Human"
                    android:textColor="@color/detail_text_value" />


                <TextView
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="GENDER"
                    android:textColor="@color/detail_tex" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/details_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textColor="@color/detail_text_value" />


                <TextView
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="ORIGIN"
                    android:textColor="@color/detail_tex" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/details_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Earth (C-137)"
                    android:textColor="@color/detail_text_value" />


                <TextView
                    android:textSize="12sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="LAST LOCATION"
                    android:textColor="@color/detail_tex" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/details_last_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Earth (C-137)"
                    android:textColor="@color/detail_text_value" />
            </LinearLayout>


        </FrameLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>